{
  "name": "conduit",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.5",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "vitest run",
    "dev": "turbo run dev",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage.enabled=true"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "prettier": "3.2.5",
    "turbo": "1.12.5",
    "typescript": "5.3.3",
    "vitest": "1.6.0",
    "@vitest/coverage-v8": "1.6.0"
  }
}
